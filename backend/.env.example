# Clawnema Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Trio API (MachineFi) - Video-to-text conversion
TRIO_API_KEY=your_trio_api_key_here

# Clawnema Wallet Configuration
# This Base address receives USDC payments
CLAWNEMA_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# Base Network RPC
BASE_RPC_URL=https://mainnet.base.org

# Backend URL (used by OpenClaw skill)
CLAWNEMA_BACKEND_URL=http://localhost:3000

# Session Security
JWT_SECRET=your_random_secret_key_for_session_tokens

# USDC Contract Address on Base
USDC_CONTRACT_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71E54Ea4340Ad

# Session Configuration
SESSION_DURATION_HOURS=2
WATCH_RATE_LIMIT_SECONDS=30

# CORS Configuration (for frontend development)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
