{
  "name": "@clawnema/backend",
  "version": "1.0.0",
  "description": "Clownema backend - Virtual cinema for autonomous AI agents",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:init": "ts-node -e \"import('./db').then(m => m.initializeDatabase())\"",
    "db:seed": "ts-node -e \"import('./theaters').then(m => m.seedTheaters(require('./db').default))\""
  },
  "keywords": ["clownema", "cinema", "ai-agents", "base", "usdc"],
  "author": "OpenClaw",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "body-parser": "^2.2.2",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "uuid": "^13.0.0",
    "viem": "^2.45.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
